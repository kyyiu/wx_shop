/* pages/category/index.wxss */
page{height: 100%;}

.cates{
  height: 100%;
}

.cates .cates_container{
  /* 在less中使用calc要用~'calc()' */
  height: calc( 100vh - 90rpx );
  display: flex;
}

.cates .cates_container .left_menu{
  flex: 2;
  border-right: 1rpx solid #ccc;
}

.cates .cates_container .left_menu .active{
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}

.cates .cates_container .left_menu .menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.cates .cates_container .right_content{
  flex: 5;
}

.cates .cates_container .right_content .goods_group{

}

.cates .cates_container .right_content .goods_group .goods_title{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
.cates .cates_container .right_content .goods_group .goods_title .delimiter{
  color:  #ccc;
  padding: 0 10rpx;
}

.cates .cates_container .right_content .goods_title{

}

.cates .cates_container .right_content .goods_list{
  overflow: hidden
}

.cates .cates_container .right_content .goods_list navigator{
  width: 33.33%;
  /* float: left; */
  display: inline-block;
  text-align: center;
}


.cates .cates_container .right_content .goods_list navigator image{
  width: 50%
}


